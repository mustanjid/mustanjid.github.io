---
import Card from "@/components/Card.astro";
import RootLayout from "@/layouts/RootLayout.astro";
import { PROJECTS } from "../projects";

---

<RootLayout title="Mustanjid Projects">
    <div class="divide-y divide-gray-200 dark:divide-gray-700">
        <div class="space-y-2 pb-2 pt-2 md:space-y-2">
            <h1
              class="text-3xl font-extrabold leading-9 tracking-tight text-gray-900 dark:text-gray-100 sm:text-4xl sm:leading-10 md:text-4xl md:leading-14"
            >
              {("Projects")}
            </h1>
            <p class="text-lg leading-7 text-gray-500 dark:text-gray-400">
              {("Showcasing personal projects and tools crafted through independent development")}
            </p>
        </div>

        <div class="container py-4">
            <div class="-m-4 flex flex-wrap">
                {PROJECTS.map((d) => (
                        <Card title={d.title} description={d.description} imgSrc={d.imgSrc} projectdesc={d.projectdesc} srccode={d.srccode} url={d.url} stack={d.stack}/>
                ))}
            </div>
        </div>
    </div>
</RootLayout>

  <div class="flex flex-col gap-5 md:m-10 m-3">
    <div>
      <header class="flex w-full flex-row justify-between gap-2">
        <h3 class="text-xl font-bold">My Thoughts</h3>
        <a
          href="/blog"
          class="dark:hover:text-red-400 hover:text-blue-600 font-medium cursor-pointer underline decoration-dashed underline-offset-8"
          target="_self"
          rel="noreferrer"
        >
          View all thoughts
          <span class="sr-only">View all thoughts link</span>
        </a>
      </header>

      <ul>
        {!posts.length && "No posts found."}
        {
          posts.slice(0, 3).map((post) => {
            const { date, title, summary, tags } = post.data;
            return (
              <li class="my-4">
                <div class="lg:flex mb-4 lg:mb-2">
                  <div class="lg:flex-1">
                    <a
                      href={`/blog/${post.slug}`}
                      class="border-b-2 border-b-slate-200 text-base hover:border-b-slate-950 transition ease-linear duration-200"
                    >
                      {" "}
                      {title}
                    </a>
                  </div>

                  <div class="text-sm">
                    <FormattedDate date={date} />
                  </div>
                </div>
              </li>
            );
          })
        }
      </ul>
    </div>

    <div>
      <header class="flex w-full flex-row justify-between gap-2">
        <h3 class="text-xl font-bold">Research Interests</h3>
        <a

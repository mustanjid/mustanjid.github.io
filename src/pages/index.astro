          PROJECTS.slice(0, 3).map((project) => {
            const { title, description, imgSrc, href, url, stack } = project;
            return (
              <div class="col-span-1">
                <a
                  href={url}
                  class="transition-all duration-75 ease-in-out h-full block relative top-0 hover:-top-2 shadow-lg hover:shadow-xl bg-white rounded-xl overflow-hidden astro-DOHJNAO5"
                  data-test="article-card"
                >
                  <img
                    class="h-36"
                    src={imgSrc}
                    alt={title}
                    width="360"
                    height="192"
                  />
                  <div class="py-6 px-8 astro-DOHJNAO5">
                    <h4 class="font-bold text-lg leading-tight dark:text-black">
                      {title}
                    </h4>
                    <p class="text-sm mt-2  dark:text-black">
                      {description.slice(0, 90)}...
                    </p>
                    <p class="text-xs text-gray-600 mt-4 flex items-center astro-DOHJNAO5">
                      Stack: {stack.join(", ")}
                    </p>
                  </div>
                </a>
              </div>
            );
          })
        }
      </section>
    </div>

    <div>
      <header class="flex w-full flex-row justify-between gap-2">
        <h3 class="text-xl font-bold">Award & Achievement</h3>
